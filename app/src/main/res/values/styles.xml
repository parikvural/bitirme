<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryVariant</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="android:windowBackground">@color/primaryVariant</item>
        <item name="android:textColorPrimary">@color/onPrimary</item>
        <item name="android:textColorSecondary">@color/tertiaryVariant</item>
    </style>
    <style name="AlertDialogCustom" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@color/primaryVariant</item>
        <item name="android:textColorPrimary">@color/onPrimary</item>
        <item name="colorAccent">@color/secondary</item>
    </style>
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button_blue</item>
        <item name="android:textColor">@color/onSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="backgroundTint">@color/secondary</item> </style>

    <style name="TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleTextStyle" parent="TextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>